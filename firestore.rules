rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user has premium
    function isPremium() {
      return request.auth != null && 
             request.auth.token.premium == true &&
             (!exists(request.auth.token.premiumExpiresAt) || 
              request.auth.token.premiumExpiresAt > timestamp.date(request.time));
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    
    // User documents
    match /users/{userId} {
      // Allow read if user is authenticated
      allow read: if isAuthenticated();
      
      // Allow write only to own document
      allow write: if isAuthenticated() && isOwner(userId);
      
      // Premium users can access their own full profile
      allow get: if isAuthenticated() && isOwner(userId);
      
      // Admins can access any user (optional - add claim 'admin': true)
      allow read, write: if isAuthenticated() && 
                          request.auth.token.get('admin', false) == true;
    }
    
    // Laudos/Exams (premium content)
    match /laudos/{laudoId} {
      // Allow read if user is premium or owns the document
      allow read: if isAuthenticated() && 
                  (isOwner(resource.data.userId) || isPremium());
      
      // Allow write if user is premium and owns the document
      allow write: if isAuthenticated() && 
                   isPremium() && 
                   isOwner(resource.data.userId);
      
      // Allow create if user is premium
      allow create: if isAuthenticated() && 
                    isPremium() && 
                    request.resource.data.userId == request.auth.uid;
    }
    
    // Transactions (read-only for users, admin write)
    match /transactions/{transactionId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                    request.auth.token.get('admin', false) == true;
    }
    
    // Templates and public content (read-only for authenticated users)
    match /templates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                    request.auth.token.get('admin', false) == true;
    }
    
    // Premium content collection
    match /premiumContent/{contentId} {
      // Only premium users can access
      allow read: if isAuthenticated() && isPremium();
      allow write: if isAuthenticated() && 
                    request.auth.token.get('admin', false) == true;
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

